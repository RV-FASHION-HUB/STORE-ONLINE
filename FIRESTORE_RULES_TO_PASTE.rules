rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products - anyone can read; only admins (via users/{uid}.isAdmin) can write
    match /products/{productId} {
      allow read: if true;
      // TEMPORARY (DEV): allow authenticated users to update stock for order fulfillment. Restrict to admins in production.
      allow create, update: if request.auth != null && (request.auth.uid == 'dev-mode' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      // Allow authenticated users to update only rating and ratingCount fields (for reviews)
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rating', 'ratingCount']);
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Orders
    match /orders/{orderId} {
      allow create: if request.auth != null;
      // TEMPORARY (DEV): allow any authenticated user to read orders so tracking and debugging work.
      // Revert this to the secure owner/admin check before deploying to production.
      allow read: if request.auth != null;
      // Allow customers to update their own orders (payment info); admins can update any order
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.customerId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
      );
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Reviews
    match /reviews/{reviewId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.customerId ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.exists && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }

    // Users - allow users to manage their own document; admins can read/write
      match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.exists && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true));
      allow write: if request.auth != null && (request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.exists && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true));

      match /addresses/{addressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    // Note: The addresses field is stored as an object in the users/{userId} document.
    // Customers can read/write their entire user document including addresses.
    // Rules allow users to save addresses directly on their user document.

    // Banners and settings - admin only (via users doc)
    match /banners/{doc=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /settings/{doc=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Fallback: deny everything else by default
  }
}
